# tls-client ignores server_bridge setting
tls-client
remote <%= @server %>
pkcs12 certs/<%= @server %>/<%= @fqdn %>.p12
comp-lzo yes
dev tap
proto udp
<% if @tls_remote -%>
tls-remote "<%= @tls_remote %>"
<% end -%>
<% if @ta_key -%>
tls-auth certs/<%= @server %>/ta.key 1
<% end -%>
nobind
auth-nocache
script-security 2
keepalive 5 20
persist-key
persist-tun
<% if @hwaddress -%>
up "/etc/openvpn/client_up hwaddress <%= @hwaddress %>"
<% else -%>
up "/etc/openvpn/client_up"
<% end -%>
down "/etc/openvpn/client_down"
